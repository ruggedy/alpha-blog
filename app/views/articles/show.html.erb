<h2 class = "col-xs-offset-4"><%= @article.title%></h2>
<div class="well col-xs-6 col-xs-offset-2">
  <% if @article.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li> <%=link_to gravatar_for(@article.user), user_path(@article.user)%></li>
          <li class="article-title"> <%=link_to @article.user.username, user_path(@article.user)%></li>
          <li><small><%=pluralize(@article.user.articles.count, "article") if @article.user.articles%></small></li>
        </div>
      </div>
    </ul>
  <%end%>

  <h4 class="center descriptions"><strong>description:</strong> </h4>
  <hr>
  <%= simple_format(@article.description)%>
  <div class="article-actions">
    <%if logged_in? && (current_user == @article_user || current_user.admin?%>
      <%= link_to 'edit article', edit_article_path(@article), class: "btn btn-xs btn-primary"%>
      <%= link_to 'delete article', article_path(@article), method: :delete,
                                                            data: {confirm: "are you sure you want to delete this article?"},
                                                            class: "btn btn-xs btn-danger"%>
    <%end%>
    <%= link_to 'show all articles', articles_path, class: "btn btn-xs btn-success" %>
  </div>

</div>
