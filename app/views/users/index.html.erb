<h1 align ="center"> All Alpha Bloggers</h1>
<div class="centre">
  <%= will_paginate%>
</div>
<% @users.each do |user|%>
  <div class="center">
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li> <%=link_to gravatar_for(user), user_path(user)%></li>
          <li class="article-title"> <%=link_to user.username, user_path(user)%></li>
          <li><small><%=pluralize(user.articles.count, "article") if user.articles%></small></li>
          <% if logged_in? and current_user.admin?%>
            <li><%=link_to "delete user", user_path(user), method: :delete, data:{ confirm: "are you sure you want to delete this user"}%></li>
          <%end%>
        </div>
      </div>
    </ul>
  </div>
<%end%>
<div class="centre">
  <%= will_paginate%>
</div>
